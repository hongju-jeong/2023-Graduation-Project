{
    "task": "swinir_sr_realworld_x4_psnr"     // real-world image sr. root/task/images-models-options
    , "model": "plain" // "plain" | "plain2" if two inputs
    , "gpu_ids": [0,1]

    , "merge_bn": false               // BN for DnCNN
    , "merge_bn_startpoint": 40000000  // merge BN after N iterations
  
    , "scale": 4       // broadcast to "datasets"
    , "n_channels": 3  // broadcast to "datasets", 1 for grayscale, 3 for color

  
    , "path": {
      "root": "superresolution"            // "denoising" | "superresolution" | "dejpeg"
      , "pretrained_netG": null      // path of pretrained model
      , "pretrained_netE": null      // path of pretrained model
    }
  
    , "datasets": {
      "train": {
        "name": "train_dataset"           // just name
        , "dataset_type": "jpeg"         // "dncnn" | "dnpatch" | "fdncnn" | "ffdnet" | "sr" | "srmd" | "dpsr" | "plain" | "plainpatch" | "jpeg"
        , "dataroot_H": "/local_datasets/SwinIR_Datasets/realworld_datasets/trainsets/trainH"// path of H training dataset. DIV2K (800 training images) + Flickr2K (2650 images) + + OST (10324 images)
        , "dataroot_L": null            // path of L training dataset
  
        , "dataloader_shuffle": true
        , "dataloader_num_workers": 16
        , "dataloader_batch_size": 128      // batch size 1 | 16 | 32 | 48 | 64 | 128. Total batch size =4x8=32 in SwinIR
      }
      , "test": {
        "name": "test_dataset"            // just name
        , "dataset_type": "jpeg"         // "dncnn" | "dnpatch" | "fdncnn" | "ffdnet" | "sr" | "srmd" | "dpsr" | "plain" | "plainpatch" | "jpeg"
        , "dataroot_H": "/local_datasets/SwinIR_Datasets/realworld_datasets/testsets/HR"  // path of H testing dataset
        , "dataroot_L": null              // path of L testing dataset
  
      }
    }
  
    , "netG": {
      "net_type": "fbswinir"
      , "upscale": 4
      , "in_chans": 3
      , "img_size": 64
      , "window_size": 8
      , "img_range": 1.0
      , "depths": [6, 6, 6, 6, 6, 6]
      , "embed_dim": 180
      , "num_heads": [6, 6, 6, 6, 6, 6]
      , "mlp_ratio": 2
      , "upsampler": "nearest+conv"        // "pixelshuffle" | "pixelshuffledirect" | "nearest+conv" | null
      , "resi_connection": "1conv"        // "1conv" | "3conv"
  
      , "init_type": "default"
    }
  
    , "train": {
      "G_lossfn_type": "l1"               // "l1" preferred | "l2sum" | "l2" | "ssim" | "charbonnier"
      , "G_lossfn_weight": 1.0            // default
  
      , "E_decay": 0.999                  // Exponential Moving Average for netG: set 0 to disable; default setting 0.999
  
      , "G_optimizer_type": "adam"        // fixed, adam is enough
      , "G_optimizer_lr": 2e-4            // learning rate
      , "G_optimizer_wd": 0               // weight decay, default 0
      , "G_optimizer_clipgrad": null      // unused
      , "G_optimizer_reuse": true         //
  
      , "G_scheduler_type": "MultiStepLR" // "MultiStepLR" is enough
      , "G_scheduler_milestones": [500000, 800000, 900000, 950000, 1000000]
      , "G_scheduler_gamma": 0.5
  
      , "G_regularizer_orthstep": null    // unused
      , "G_regularizer_clipstep": null    // unused
  
      , "G_param_strict": true
      , "E_param_strict": true
  
      , "checkpoint_test": 5000           // for testing
      , "checkpoint_save": 5000           // for saving model
      , "checkpoint_print": 200           // for print
    }
  }
  